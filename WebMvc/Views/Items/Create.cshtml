@model WebMvc.Models.Requests.CreateItemRequest

@{
    ViewData["Title"] = "Create New Item";
}

<h1>Create New Item</h1>


<form id="createItemsForm" method="post" action="/api/Items/Create">
    <div class="mt-3">
        <label class="form-label">Group Id</label>
        <input type="number" class="form-control" asp-for="GroupId">

        <label class="form-label">Price</label>
        <input type="number" class="form-control" asp-for="Price">

        <label class="form-label">PhotoURL</label>
        <input type="url" class="form-control" asp-for="PhotoUrl">

    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>
