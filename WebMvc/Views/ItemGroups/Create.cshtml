@model WebMvc.Models.Requests.ItemGroup.CreateItemGroupRequest

@{
    ViewData["Title"] = "Create New Item Group";
}

<h1>Create New Item Group</h1>

<form id="createGroupForm" method="post" action="/api/ItemGroups/Create">
    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name">
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>

<script>
    document.getElementById('createGroupForm').addEventListener('submit', function (event) {
        event.preventDefault(); 

        fetch(this.action, {
            method: this.method,
            body: new FormData(this)
        })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Failed to create item group.');
                }

                window.history.back();
            })
            .catch(error => {
                console.error('Error:', error);

            });
    });
</script>
